    <marquee behavior="alternate" direction="down" bgcolor="#FFFF99">Scrolling downwards</marquee>
    <marquee behavior="slide" direction="left" bgcolor="FFCCCC">Scrolling left</marquee>
    <marquee behavior="scroll" direcyion="right" bgcolor="CCFFCC">Scrolling right</marquee>
    <h2>sliding</h2>
